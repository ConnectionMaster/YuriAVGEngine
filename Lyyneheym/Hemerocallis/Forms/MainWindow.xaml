                <Canvas.Background>
                    <ImageBrush ImageSource="/Hemerocallis;component/QuestionPaper.png"/>
                </Canvas.Background>
                <Canvas.Effect>
                    <DropShadowEffect Opacity="0.3" ShadowDepth="6" BlurRadius="10"/>
                </Canvas.Effect>

            </Canvas>
        </Canvas>

    </Grid>
</controls:MetroWindow>
