<Page x:Class="Yuri.Hemerocallis.Forms.RTBPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Yuri.Hemerocallis.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="RTBPage" ShowsNavigationUI="False">
    <Grid x:Name="grid">
        <RichTextBox x:Name="RichTextBox_TextArea" Background="Transparent" Margin="0,0,0,0" Padding="10,0,10,25" FontSize="22" Height="{Binding ActualHeight, ElementName=grid, Mode=OneWay}" FontFamily="Microsoft YaHei" BorderBrush="Transparent" CaretBrush="Black" BorderThickness="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Width="{Binding ActualWidth, ElementName=grid, Mode=OneWay}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <RichTextBox.Effect>
                <DropShadowEffect x:Name="RichTextBox_DropShadowEffect" Color="Black" Direction="0" ShadowDepth="0" Opacity="0.3"/>
            </RichTextBox.Effect>
            <FlowDocument x:Name="RichTextBox_FlowDocument" LineHeight="10" Foreground="#FF2C3F51">
                
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Page>
