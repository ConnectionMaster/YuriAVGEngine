<Window x:Class="Yuri.NavWindow"
				Name="nvWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yuri"
        mc:Ignorable="d"
        Title="NavWindow" Height="752" Width="1280" Background="CadetBlue">
  <Viewbox x:Name="viewbox" Stretch="UniformToFill" Width="{Binding ElementName=nvWindow, Mode=OneWay}" Height="{Binding ElementName=nvWindow, Mode=OneWay}">
    <Canvas x:Name="mainCanvas" Width="{Binding ElementName=viewbox, Mode=OneWay}" Height="{Binding ElementName=viewbox, Mode=OneWay}">
      <Button x:Name="button" Content="P1" Canvas.Left="80" Canvas.Top="67" Width="75" Click="button_Click"/>
      <Button x:Name="button2" Content="P2" Canvas.Left="188" Canvas.Top="67" Width="75" Click="button2_Click" />
      <Frame Name="pc" Height="752" Width="1280" HorizontalAlignment="Stretch" NavigationUIVisibility="Hidden">

      </Frame>

    </Canvas>
  </Viewbox>
</Window>
